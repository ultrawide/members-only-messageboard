extends layout

block content
  h1 #{title}
  
  // login form
  form(method='POST', action='')
    div.form-group
      label(for="username") Username (Email):
      input(type='text', name="username")
    div.form-group
      label(for="password") Password:
      input(type='password', name="password")
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg